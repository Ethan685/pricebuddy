{
  "name": "pricebuddy",
  "version": "1.0.0",
  "private": true,
  "description": "Global price comparison & cashback platform",
  "workspaces": [
    "libs/*",
    "services/*",
    "apps/*"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r --parallel dev",
    "test": "pnpm -r test",
    "clean": "pnpm -r exec rm -rf dist build lib node_modules/.cache",
    "typecheck": "pnpm -r run typecheck",
    "lint": "pnpm -r run lint",
    "scrape_jobs": "node scripts/scrape-jobs.mjs"
  },
  "devDependencies": {
    "typescript": "5.6.3",
    "@types/node": "20.11.30"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "19.2.5",
      "@types/react-dom": "19.2.3",
      "@types/node": "20.11.30",
      "typescript": "5.6.3"
    }
  }
}
