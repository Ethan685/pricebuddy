{
    "manifest_version": 3,
    "name": "PriceBuddy",
    "version": "1.6.0",
    "description": "Global Price Tracker & Cashback",
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "alarms"
    ],
    "host_permissions": [
        "*://*.amazon.com/*",
        "*://*.coupang.com/*",
        "*://*.naver.com/*",
        "https://asia-northeast3-pricebuddy-5a869.cloudfunctions.net/*",
        "http://127.0.0.1:5001/*"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "src/background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.amazon.com/*",
                "*://*.coupang.com/*",
                "*://*.naver.com/*"
            ],
            "js": [
                "src/content.js"
            ],
            "run_at": "document_idle"
        }
    ]
}