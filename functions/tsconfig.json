{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "ES2020"
    ],
    "outDir": "lib",
    "rootDir": "src",
    "strict": false,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": [
      "node"
    ],
    "skipLibCheck": true,
    "noImplicitAny": false
  },
  "include": [
    "src/index.ts",
    "src/api.ts",
    "src/routes/**/*.ts"
  ],
  "exclude": [
    "src/api/**",
    "src/triggers/**",
    "src/**/*.test.ts"
  ]
}
